{
    "entrypoint": "index.html",
    "shell": "src/my-app.js",
    "fragments": [
        "src/all-badges.js",
        "src/welcome-page.js",
        "src/display-badge.js",
        "src/section-badges.js"
    ],
    "sources": [
        "sw.js",
        "images/**/*",
        "res/**/*"
    ],
    "extraDependencies": [
        "manifest.json",
        "node_modules/@webcomponents/webcomponentsjs/*.js",
        "!node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
        "node_modules/@webcomponents/webcomponentsjs/bundles/*.js"
    ],
    "builds": [{
        "name": "es6-bundled",
        "browserCapabilities": [
            "es2015"
        ],
        "js": {
            "minify": true,
            "transformModulesToAmd": true
        },
        "css": {
            "minify": true
        },
        "html": {
            "minify": true
        },
        "bundle": true,
        "addServiceWorker": false
    }],
    "moduleResolution": "node",
    "npm": true,
    "lint": {
        "rules": [
            "polymer-3"
        ]
    }
}